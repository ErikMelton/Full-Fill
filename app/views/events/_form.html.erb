<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :activity_id, collection: @activityIDs %>
    <%= f.input :activity_hours, prompt: "How long did you do this?"%>
    <%= f.input :activity_note %>
    <%= f.input :activity_place %>
    <%= f.input :activity_when %>
    <%= f.input :person_id, :as => :hidden, :input_html => { :value => @person.client_id } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
